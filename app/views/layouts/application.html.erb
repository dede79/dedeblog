<!DOCTYPE html>
<html>
<head>
  <title>The Mummy Coder's Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag 'application', 'http://fonts.googleapis.com/css?family=Raleway:400,700' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= favicon_link_tag 'favicon.ico' %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div id="sidebar">
		<div id="logo">
			<%= link_to root_path do %>
				<%= image_tag "front.jpg", width: "80", height: "80" %>
			<% end %>
		</div>

		<ul>
			<li class="category">The Mummy Coder</li>
			<li><%= link_to "Blog", root_path %></li>
			<li><%= link_to "About",about_path %></li>
		</ul>

		<% if !user_signed_in? %>
			<p class="sign_in"><%= link_to "Admin Login", new_user_session_path %></p>
		<% end %>
	</div>

	<div id="main_content">
		<div id="header">
			<% if current_page?(root_path) %>
				<p>All Posts</p>
			<% elsif current_page?(about_path) %>
				<p>About</p>
			<% else %>
				<%= link_to "Back to All Posts", root_path %>
			<% end %>

			<% if user_signed_in? %>
				<div class="buttons">
					<button class="button"><%= link_to "New Post", new_post_path %></button>
					<%= link_to "Log Out", destroy_user_session_path, :class => "button", method: :delete %>
				</div>
			<% end %>
		</div>

        <% flash.each do |key, value| %>
        <p><%= value %></p>
        <%end%>
		<%= yield %>
	</div>
</body>
</html>
